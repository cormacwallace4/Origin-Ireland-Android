<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Origin"
    android:background="@drawable/bgimage1"
    android:fitsSystemWindows="true">

    <!-- Back button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/system_blue"
        android:drawableStart="@drawable/baseline_arrow_back_black_18"
        android:drawableTint="@color/system_blue"/>

    <!-- Heading -->
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/back_button"
        android:text="Saved Locations"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <!-- ListView -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/heading"
        android:padding="20dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp" />

</RelativeLayout>


